            <DataGrid.Columns>

            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="greeting" Content="Избранные билеты" HorizontalAlignment="Left" Margin="127,28,0,0" VerticalAlignment="Top" Width="507" Height="42" FontSize="30" FontFamily="Arial Black" Foreground="White"/>
    </Grid>
</Window>
